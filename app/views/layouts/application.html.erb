<!DOCTYPE html>
<html>
<head>
  <%= render_page_title_tag %>
  <%= render_page_description_meta_tag %>
  <%= render_page_keywords_meta_tag %>
  <%= render_page_image_link_tag %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= auto_discovery_link_tag(:rss, "/posts/feed.rss", {title: "RSS"})  %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= yield :stylesheets %>
</head>
<%= render_body_tag %>

<%= render :partial => "common/menu" %>
<div class="container">
  <%= notice_message %>
  <div class="content">
    <%= yield %>
    <div class="footer">  
      <%= render :partial => "common/footer" %>
    </div>
  </div>
</div>

<%= render :partial => "common/facebook_js" %>
<%= yield :javascripts %>
</body>
</html>
