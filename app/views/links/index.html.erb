<div class="row">
  <div class="span1">
  </div>
  <div class="span8">
    <%= link_to '全部', links_path, class: 'btn btn-link'  %>
    <% @categories.each do |category| %>
      <%= link_to category.name, links_path+'?category_id='+category.id.to_s, class: 'btn btn-link'  %>
    <% end %>
  </div>
  <div class="span3">
  </div>
</div>

<div class="row">
 <table class="table table-striped table-hover" style="table-layout: fixed;">
  <thead>
   <tr>
     <th style="width:10%"></th>
     <th style="width:10%">類別</th>
     <th style="width:20%">標題</th>
     <th style="width:30%">描註</th>
     <th style="width:20%">分享者</th>
     <th style="width:10%">點擊數</th>
   </tr>
 </thead>
 <tbody id="content">
  <% @links.each do |link| %>
  <%= content_tag_for(:tr,link) do %>
    <th>        
      <%= image_tag link.thumbnail_url,class: "center-block" ,size: "50x50" %>
    </th>
    <th> 
      <%= link.category.name %>
    </th>
    <th>
      <%= link_to link.title,link.url  %>
    </th>
    <th>
      <%= link.description %>
    </th>
    <th>
      <%= gravatar_image_tag(link.author.email.gsub('spam', 'mdeering'), :alt => link.author.name,:gravatar => {:size =>15})  %>
      <%= link_to link.author.name, user_path(link.author) %>
    </th>
    <th>
      <%= link.hits %>
    </th>
  <% end %>
  <% end %>

</tbody>
</table>

</div>