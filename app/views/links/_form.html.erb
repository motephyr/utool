    <%= simple_form_for(@link) do |f| %>
    <% if current_page?(controller: 'links', action: 'new') %>
    <%= f.input :url, label: '網址' %>
    <% else %>
    <%= f.input :url, label: '網址', disabled: true %>
    <% end %>
    <%= f.input :category_id, label: '類別',collection: @categories, selected: @link.category_id %>
    <%= f.input :direction, label: "說明  (30個字以內是好主意)", input_html: { maxlength: 30 } %>
    <%= f.input :summary, as: :hidden %>
    <% end %>