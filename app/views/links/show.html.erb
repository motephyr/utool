<div class="row">

  <div class="span6">
    <div class="row">
      <div class="span1">
        <div style="width:100px;height:100px">
              <%= image_tag link.thumbnail_url ? link.thumbnail_url : 'noimage.jpg' , class: "center-block" ,size: "100x100"  %>
            </div>
      </div>
      <div class="span4">
        <h5>
          <%= link_to(@link.title,@link.url)  %>
        </h5>
        <p>
          <%= @link.direction %>
        </p>
      </div>
      <div class="span1">
        <%= link_to '修改', edit_link_path(@link) ,class: 'btn btn-mini btn-block' %>
        <%= link_to '刪除', link_path(@link),class: 'btn btn-mini btn-block',method: 'delete' ,confirm: 'Are you sure?'  %>
      </div>
    </div>
  </div>

</div>

<div class="row">
  <div class="span6">
    <ul>
      <li>類別:<%= @link.category.name %></li>
      <li>描述:<%= @link.description %></li>
      <li>點擊數:<%= @link.hits %></li>
    </ul>
  </div>
</div>


<hr></hr>
