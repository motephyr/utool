<div class="row">
  <div class="span2">
    <%= link_to "類別管理", categories_path, class: "btn btn-large btn-block"  %>
    <%= link_to "新增網站", new_link_path, class: "btn btn-large btn-block"  %>
  </div>

  <div class="span9">

    <div class="row">
      <div class="span9">
        <%= link_to "全部", user_path(@user), class: "btn btn-link"  %>
        <% @categories.each do |category| %>
        <%= link_to category.name, "#{user_path(@user)}?category_id=#{category.id}", class: "btn btn-link"  %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="span9">
        <div class="row">
        <% @links.each do |link| %>
        <%= div_for(link, class: "span3", style: "height:150px;overflow:hidden") do %>
        <div class="row">
          <div class="span1">
            <%= render partial: "links/link_image_75",  locals: {link: link} %>
            <%= link_to "內容", link_path(link) ,class: "btn btn-mini btn-block" %>
          </div>
          <div class="span2">
            <h5>
              <%= link_to(link.title, link.url, target: "_blank")  %>
            </h5>
            <p>
              <%= link.direction %>
            </p>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
      </div>
    </div>

  </div>

</div>