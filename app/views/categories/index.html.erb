<div class="row">
  <div class="span12"> 
    <div class="category">
      <%= link_to("新增類別", new_category_path , :class => "btn btn-primary" ) %>
    </div>
    <table class="table">
      <thead> 
        <tr>
          <td></td>
          <td> 類別名稱 </td>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %> <tr>
        <td> # </td>
        <td> <%= category.name %> </td>
        <td> <%= link_to("Edit", edit_category_path(category), :class => "btn btn-mini")%>
          <%= link_to("Delete", category_path(category), :class => "btn btn-mini", :method=>:delete,:confirm=>"Are you sure?")%>
        </td> </tr>
        <% end %> 
      </tbody>
    </table>
  </div> 
</div>